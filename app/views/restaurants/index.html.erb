  <% @restaurants.each do |restaurant| %>

    <div class="box">
      <h4><%= link_to restaurant.name.capitalize, restaurant_path(restaurant), id: "restaurant-name" %></h4>
      <h5><%= restaurant.category.capitalize %></h5>
      <p>üè† <%= restaurant.address %></p>
    </div>

  <% end %>

</div>
