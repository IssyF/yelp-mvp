<h1>Add a Restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.select :category, %w[chinese italian japanese french belgian], prompt: 'Select Category' %>
  <%= f.submit %>
<% end %>

<p><%= link_to "Go back", restaurants_path %></p>
