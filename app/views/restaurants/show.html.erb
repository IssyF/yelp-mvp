<p><%= link_to "👈 Go back", restaurants_path %></p>

<h1><%= @restaurant.name.capitalize %></h1>

<h5><%= @restaurant.category.capitalize %></h5>
<p>🏠 <%= @restaurant.address %></p>
<p>📞 <%= @restaurant.phone_number %></p>


<h3>Reviews</h3>


<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %> <%= "⭐" * review.rating %></li>
  <% end %>
</ul>

<div class="button">
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
</div>
